            "type": "string"
          },
          "updatedAt": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": [
          "id",
          "userId",
          "side",
          "cryptoCurrency",
          "fiatCurrency",
          "price",
          "totalAmount",
          "filledAmount",
          "minLimit",
          "maxLimit",
          "status",
          "createdAt",
          "updatedAt"
        ]
      },
