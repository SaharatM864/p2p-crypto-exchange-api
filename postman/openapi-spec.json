        "type": "object",
        "properties": {
          "side": {
            "type": "string",
            "enum": [
              "BUY",
              "SELL"
            ],
            "example": "SELL"
          },
          "cryptoCurrency": {
            "type": "string",
            "example": "BTC"
          },
          "fiatCurrency": {
            "type": "string",
            "example": "THB"
          },
          "price": {
            "type": "number",
            "example": 1500000,
            "description": "Price per 1 unit of crypto"
          },
          "totalAmount": {
            "type": "number",
            "example": 1,
            "description": "Total crypto amount"
          },
          "minLimit": {
            "type": "number",
            "example": 100
          },
          "maxLimit": {
            "type": "number",
            "example": 1000000
          }
        },
        "required": [
          "side",
          "cryptoCurrency",
          "fiatCurrency",
          "price",
          "totalAmount"
        ]
      },
