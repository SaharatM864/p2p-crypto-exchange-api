        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "orderId": {
            "type": "string"
          },
          "buyerId": {
            "type": "string"
          },
          "sellerId": {
            "type": "string"
          },
          "cryptoAmount": {
            "type": "string"
          },
          "fiatAmount": {
            "type": "string"
          },
          "price": {
            "type": "string"
          },
          "status": {
            "allOf": [
