          "createdAt": {
            "format": "date-time",
            "type": "string"
          },
          "completedAt": {
            "format": "date-time",
            "type": "string"
          }
        },
        "required": [
          "id",
          "orderId",
          "buyerId",
          "sellerId",
          "cryptoAmount",
          "fiatAmount",
          "price",
          "status",
          "createdAt"
        ]
      },
      "CreateTradeDto": {
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "example": "uuid-of-order"
          },
          "amount": {
            "type": "number",
            "example": 0.5,
            "description": "Amount of crypto to buy/sell"
          }
        },
        "required": [
          "orderId",
          "amount"
        ]
